{
  "name": "illa-design",
  "private": true,
  "description": "illa UI Component",
  "repository": "git@github.com:illacloud/illa-design.git",
  "author": "illa Cloud",
  "license": "Apache-2.0",
  "resolutions": {
    "graceful-fs": "4.2.9"
  },
  "scripts": {
    "storybook": "pnpm build-all-components && pnpm start-storybook -p 6006",
    "bs": "pnpm build-all-components && pnpm build-storybook",
    "build-all-components": "NODE_OPTIONS=--max-old-space-size=10240 turbo run build",
    "lint": "eslint packages/**/src/ --ext .ts,.tsx --config .eslintrc.js",
    "format": "prettier --write \"packages/**/*.{ts,tsx}\"",
    "prepare": "husky install",
    "plop": "plop new",
    "plop-icon": "plop new-icon"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "react",
        "react-dom"
      ]
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-react": "^1.1.7",
    "eslint-import-resolver-typescript": "^3.4.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "lint-staged": "^13.0.3",
    "@emotion/babel-plugin": "^11.10.5",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/chroma-js": "^2.1.3",
    "@types/lodash": "^4.14.178",
    "@types/uuid": "^8.3.4",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.18.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@storybook/addon-a11y": "^6.5.14",
    "@storybook/addon-actions": "^6.5.14",
    "@storybook/addon-essentials": "^6.5.14",
    "@storybook/addon-links": "^6.5.14",
    "@storybook/addon-storysource": "^6.5.14",
    "@storybook/addons": "^6.5.14",
    "@storybook/react": "^6.5.14",
    "@storybook/theming": "^6.5.14",
    "husky": "^7.0.4",
    "plop": "^3.0.5",
    "prettier": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1",
    "sinon": "^14.0.2",
    "turbo": "^1.6.3",
    "@emotion/react": "^11.10.5",
    "framer-motion": "^7.6.12",
    "@storybook/builder-vite": "^0.2.5",
    "@babel/core": "^7.20.5",
    "react-refresh": "^0.14.0",
    "require-from-string": "^2.0.2",
    "@illa-design/react": "workspace:*"
  }
}

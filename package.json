    "cypress": "^9.5.1",
    "husky": "^7.0.4",
    "jest": "^27.4.0",
    "jest-environment-jsdom": "^27.4.0",
    "plop": "^3.0.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
